<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class entity-name="Page" table="WIKI_PAGES">
        <cache usage="read-write"/>

        <id name="id"
            column="PAGE_ID"
            type="long">
            <generator class="native"/>
        </id>

        <property name="name"
                  column="PAGE_NAME"
                  type="string"
                  not-null="true"/>

        <property name="body"
                  column="PAGE_BODY"
                  type="text"
                  not-null="true"/>

    </class>

</hibernate-mapping>
